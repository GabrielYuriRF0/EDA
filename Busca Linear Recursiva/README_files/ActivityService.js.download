app.service("ActivityService", ["$http", "$q", function($http, $q) {

	var self = this;


	self.getActivities = function() {
		
		var q = $q.defer();
		var activities = "http://api-tst-eda.splab.ufcg.edu.br/activities";
		
		$http.get(activities).then(function(info) {
			q.resolve(info.data);
		}, function(info){
			console.log(info);
			// tratar erro depois
		});

		return q.promise;
	};

	self.getSingleActivity = function(activity_name) {
		
		var q = $q.defer();
		
		var activity = "http://api-tst-eda.splab.ufcg.edu.br/activity/" + activity_name;
		$http.get(activity).then(function(info) {
			q.resolve(info.data);
		}, function(info){
			console.log(info);
		});

		return q.promise;
	};

}]);